                    </group>
                  </group>
                  <group attrs="{'invisible':[('mission', 'not in',('interne_all'))] }">
                    <group>
                      <field name="frais_m" />
                    </group>
                    <group>
                      <field name="date_f" attrs="{'invisible':[('frais_m', 'not in', 'oui')] }"/>
